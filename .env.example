# ARYA Bot Çevresel Değişkenler
# Bu dosyayı kopyalayıp .env olarak kaydedin ve değerleri doldurun

# Uygulama Ayarları
NODE_ENV=development
PORT=5000
BOT_NAME=ARYA
COMPANY_NAME=PlanB Global Network Ltd Şti

# Hugging Face API (optional - for AI-powered responses)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=akdeniz27/bert-base-turkish-cased-ner

# WhatsApp Ayarları
SESSION_PATH=./session
LOG_LEVEL=info

# API Ayarları (gelecekte kullanılacak)
API_BASE_URL=https://api.planbglobal.com
API_KEY=your_api_key_here

# Veritabanı Ayarları (gelecekte kullanılacak)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arya_bot
DB_USER=username
DB_PASS=password

# E-posta Ayarları (gelecekte kullanılacak)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Güvenlik Ayarları
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here